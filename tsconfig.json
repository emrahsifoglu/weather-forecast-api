{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "~controllers/*": [ "controllers/*" ],
      "~middlewares/*": [ "middlewares/*" ],
      "~modules/*": [ "modules/*" ],
      "~routes/*": [ "routes/*" ],
      "~services/*": [ "services/*" ]
    }
  },
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./test/**/*.test.ts"
  ]
}
