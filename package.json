{
  "name": "weather-forecast-api",
  "version": "0.0.1",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "test": "rimraf .tmp && mocha-webpack --opts config/mocha/mocha-webpack.opts",
    "test:watch": "rimraf .tmp && mocha-webpack --opts config/mocha/mocha-webpack.opts --watch",
    "test:report": "rimraf .tmp && mocha-webpack --opts config/mocha/mocha-webpack.opts --reporter=xunit --reporter-options output=tests-report.xml",
    "test:coverage": "rimraf .tmp && nyc --reporter=text --reporter=cobertura mocha-webpack --opts config/mocha/mocha-webpack.opts",
    "dev": "webpack --config ./config/webpack.config.js",
    "dev:watch": "webpack --watch --config ./config/webpack.config.js",
    "prod": "webpack --config ./config/webpack.config.prod.js",
    "serve": "nodemon ./dist/server.js",
    "serve:prod": "npm run prod && npm run serve",
    "serve:dev": "npm run dev && npm run serve"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  },
  "author": "Emrah Sifoglu",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "yr.no-forecast": "^2.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.6",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.1.1",
    "mocha-typescript": "^1.1.12",
    "mocha-webpack": "^1.1.0",
    "nodemon": "^1.17.4",
    "nyc": "^11.7.3",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.5",
    "supertest": "^3.0.0",
    "ts-loader": "^3.2.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0"
  }
}
